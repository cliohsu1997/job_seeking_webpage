<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Daily updated aggregator of academic economics faculty job openings from universities and research institutes worldwide">
    <meta name="keywords" content="economics jobs, faculty positions, academic jobs, economics faculty, university jobs">
    <title>{{ page_title }}</title>
    
    <!-- CSS -->
    <link rel="stylesheet" href="css/styles.css">
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Header -->
    <header class="site-header">
        <div class="container">
            <div class="header-content">
                <div class="header-brand">
                    <h1>{{ page_title }}</h1>
                    <p class="header-subtitle">Daily updated aggregator of academic positions</p>
                </div>
                
                <div class="header-stats">
                    <div class="stat-item">
                        <span class="stat-value">{{ stats.total }}</span>
                        <span class="stat-label">Total Listings</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-value stat-new">{{ stats.new }}</span>
                        <span class="stat-label">New</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-value stat-active">{{ stats.active }}</span>
                        <span class="stat-label">Active</span>
                    </div>
                </div>
            </div>
            
            <div class="header-meta">
                <p class="last-updated">
                    Last updated: {{ metadata.last_updated|format_date("%B %d, %Y at %I:%M %p") if metadata.last_updated else generated_at|format_date("%B %d, %Y at %I:%M %p") }}
                </p>
            </div>
            
            <!-- Filters in Header -->
            <aside class="sidebar header-filters" id="filters-sidebar">
                    <div class="sidebar-header">
                        <h2>Filters</h2>
                        <button class="btn-clear-filters" id="clear-filters">Clear All</button>
                    </div>
                    
                    <div class="filters-content">
                        <!-- Search -->
                        <div class="filter-group">
                            <label class="filter-label">
                                <svg class="icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <circle cx="11" cy="11" r="8"></circle>
                                    <path d="m21 21-4.35-4.35"></path>
                                </svg>
                                Search
                            </label>
                            <input 
                                type="text" 
                                id="search-input" 
                                class="search-input" 
                                placeholder="Search title, institution, department..."
                            >
                        </div>

                        <!-- Sort -->
                        <div class="filter-group">
                            <label class="filter-label" for="sort-select">Sort By</label>
                            <select id="sort-select" class="filter-select">
                                <option value="deadline">Deadline (earliest first)</option>
                                <option value="posted">Posted Date (newest first)</option>
                                <option value="institution">Institution (A-Z)</option>
                            </select>
                        </div>

                        <!-- Location -->
                        <div class="filter-group">
                            <label class="filter-label">Location</label>
                            <select id="filter-region" class="filter-select">
                                <option value="">All Regions</option>
                                {% for region, count in stats.by_region.items()|sort %}
                                <option value="{{ region }}">{{ region }} ({{ count }})</option>
                                {% endfor %}
                            </select>
                        </div>

                        <!-- Job Type -->
                        <div class="filter-group">
                            <label class="filter-label">Job Type</label>
                            <div class="filter-checkboxes">
                                {% for job_type, count in stats.by_job_type.items()|sort %}
                                <label class="checkbox-label">
                                    <input type="checkbox" class="filter-checkbox" name="job_type" value="{{ job_type }}">
                                    <span>{{ job_type }} ({{ count }})</span>
                                </label>
                                {% endfor %}
                            </div>
                        </div>

                        <!-- Institution Type -->
                        <div class="filter-group">
                            <label class="filter-label">Institution Type</label>
                            <div class="filter-checkboxes">
                                {% for inst_type, count in stats.by_institution_type.items()|sort %}
                                <label class="checkbox-label">
                                    <input type="checkbox" class="filter-checkbox" name="institution_type" value="{{ inst_type }}">
                                    <span>{{ inst_type.replace('_', ' ').title() }} ({{ count }})</span>
                                </label>
                                {% endfor %}
                            </div>
                        </div>

                        <!-- Deadline Filter -->
                        <div class="filter-group">
                            <label class="filter-label">Deadline</label>
                            <select id="filter-deadline" class="filter-select">
                                <option value="">All Listings</option>
                                <option value="active">Active Only</option>
                                <option value="30">Within 30 Days</option>
                                <option value="60">Within 60 Days</option>
                                <option value="90">Within 90 Days</option>
                            </select>
                        </div>
                    </div>
                </aside>
        </div>
    </header>

    <!-- Main Content -->
    <main class="main-content">
        <div class="container">
            <div class="content-grid">
                <!-- Job Listings -->
                <section class="listings-section">
                    <!-- Results Bar -->
                    <div class="results-bar">
                        <div class="results-info">
                            <span id="results-count">{{ stats.total }}</span> listings found
                        </div>
                        <button class="btn-toggle-filters" id="toggle-filters">
                            <svg class="icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <line x1="4" y1="21" x2="4" y2="14"></line>
                                <line x1="4" y1="10" x2="4" y2="3"></line>
                                <line x1="12" y1="21" x2="12" y2="12"></line>
                                <line x1="12" y1="8" x2="12" y2="3"></line>
                                <line x1="20" y1="21" x2="20" y2="16"></line>
                                <line x1="20" y1="12" x2="20" y2="3"></line>
                                <line x1="1" y1="14" x2="7" y2="14"></line>
                                <line x1="9" y1="8" x2="15" y2="8"></line>
                                <line x1="17" y1="16" x2="23" y2="16"></line>
                            </svg>
                            Filters
                        </button>
                    </div>

                    <!-- Job Cards Container -->
                    <div class="job-cards" id="job-cards-container">
                        {% for listing in listings %}
                        <article class="job-card" 
                                 data-job-id="{{ listing.id }}"
                                 data-region="{{ listing.location.region if listing.location and listing.location.region else 'unknown' }}"
                                 data-institution-type="{{ listing.institution_type if listing.institution_type else 'unknown' }}">
                            <div class="job-card-header">
                                <div class="job-title-row">
                                    <h3 class="job-title">
                                        {% if listing.is_new %}
                                        <span class="badge badge-new">NEW</span>
                                        {% endif %}
                                        {{ listing.title }}
                                    </h3>
                                </div>
                                
                                <div class="job-meta">
                                    <div class="job-institution">
                                        <svg class="icon" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                                        </svg>
                                        <span>{{ listing.institution }}</span>
                                    </div>
                                    
                                    {% if listing.department %}
                                    <div class="job-department">
                                        <svg class="icon" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                                            <line x1="9" y1="3" x2="9" y2="21"></line>
                                        </svg>
                                        <span>{{ listing.department }}</span>
                                    </div>
                                    {% endif %}
                                </div>
                            </div>

                            <div class="job-card-body">
                                {% if listing.location %}
                                <div class="job-location">
                                    <svg class="icon" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                                        <circle cx="12" cy="10" r="3"></circle>
                                    </svg>
                                    <span>
                                        {% if listing.location.city %}{{ listing.location.city }}, {% endif %}
                                        {% if listing.location.state %}{{ listing.location.state }}, {% endif %}
                                        {{ listing.location.country }}
                                    </span>
                                </div>
                                {% endif %}

                                {% set deadline_info = listing.deadline|format_deadline %}
                                <div class="job-deadline {{ deadline_info.class }}">
                                    <svg class="icon" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <circle cx="12" cy="12" r="10"></circle>
                                        <polyline points="12 6 12 12 16 14"></polyline>
                                    </svg>
                                    <span>{{ deadline_info.text }}</span>
                                </div>

                                {% if listing.description %}
                                <p class="job-description">{{ listing.description|truncate_text(200) }}</p>
                                {% endif %}

                                <div class="job-tags">
                                    {% if listing.job_type %}
                                    <span class="tag">{{ listing.job_type }}</span>
                                    {% endif %}
                                    
                                    {% if listing.department_category %}
                                    <span class="tag">{{ listing.department_category }}</span>
                                    {% endif %}
                                    
                                    {% if listing.specializations %}
                                        {% for spec in listing.specializations[:3] %}
                                        <span class="tag tag-spec">{{ spec }}</span>
                                        {% endfor %}
                                    {% endif %}
                                </div>
                            </div>

                            <div class="job-card-footer">
                                <button class="btn btn-secondary btn-details" data-job-id="{{ listing.id }}">
                                    View Details
                                </button>
                                {% if listing.application_link %}
                                <a href="{{ listing.application_link }}" class="btn btn-primary" target="_blank" rel="noopener noreferrer">
                                    Apply
                                    <svg class="icon" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <line x1="7" y1="17" x2="17" y2="7"></line>
                                        <polyline points="7 7 17 7 17 17"></polyline>
                                    </svg>
                                </a>
                                {% endif %}
                            </div>

                            <!-- Hidden full details -->
                            <div class="job-details" id="details-{{ listing.id }}" style="display: none;">
                                <div class="details-content">
                                    {% if listing.requirements %}
                                    <div class="details-section">
                                        <h4>Requirements</h4>
                                        <p>{{ listing.requirements }}</p>
                                    </div>
                                    {% endif %}
                                    
                                    {% if listing.materials_required %}
                                    <div class="details-section">
                                        <h4>Materials Required</h4>
                                        <ul>
                                            {% for material in listing.materials_required %}
                                            <li>{{ material }}</li>
                                            {% endfor %}
                                        </ul>
                                    </div>
                                    {% endif %}
                                    
                                    {% if listing.contact_email %}
                                    <div class="details-section">
                                        <h4>Contact</h4>
                                        <p><a href="mailto:{{ listing.contact_email }}">{{ listing.contact_email }}</a></p>
                                    </div>
                                    {% endif %}
                                    
                                    {% if listing.source_url %}
                                    <div class="details-section">
                                        <h4>Source</h4>
                                        <p><a href="{{ listing.source_url }}" target="_blank" rel="noopener noreferrer">View Original Posting</a></p>
                                    </div>
                                    {% endif %}
                                </div>
                            </div>
                        </article>
                        {% endfor %}
                    </div>

                    <!-- Pagination -->
                    <div class="pagination" id="pagination">
                        <!-- Generated by JavaScript -->
                    </div>

                    <!-- No Results Message -->
                    <div class="no-results" id="no-results" style="display: none;">
                        <svg class="icon-large" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="11" cy="11" r="8"></circle>
                            <path d="m21 21-4.35-4.35"></path>
                        </svg>
                        <h3>No listings found</h3>
                        <p>Try adjusting your filters or search terms</p>
                    </div>
                </section>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="site-footer">
        <div class="container">
            <p>&copy; 2026 Economics Faculty Job Openings. Data aggregated from {{ stats.by_institution_type|length }} sources.</p>
            <p class="footer-meta">Generated on {{ generated_at|format_date("%B %d, %Y at %I:%M %p") }}</p>
        </div>
    </footer>

    <!-- JavaScript -->
    <script src="js/app.js"></script>
    <script src="js/filters.js"></script>
    <script src="js/search.js"></script>
</body>
</html>
